<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="day10.qianfeng.com.pickperson.activity.SearchActivity"
    android:orientation="horizontal"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#ffffff"

    >
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="5dp"
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="match_parent"
        android:background="@drawable/searchframe"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_searchicon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/search_icon"
            />
        <EditText
            android:paddingLeft="5dp"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_searchicon"
            android:layout_alignBottom="@id/iv_searchicon"
            android:background="@null"
            android:hint="请输入搜索关键字"
            android:textSize="15sp"

            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/clear_gray"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            />


    </RelativeLayout>
    <TextView
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="搜索"
        android:textSize="18sp"
        android:textColor="#36BC9C"
        />

</LinearLayout>

</LinearLayout>